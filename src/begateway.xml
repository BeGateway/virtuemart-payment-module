<?xml version="1.0" encoding="UTF-8"?>
<extension version="2.5" type="plugin" group="vmpayment" method="upgrade">
	<name>beGateway</name>
 	<author>beGateway development team</author>
  <creationDate>May 24 2017</creationDate>
	<authorEmail>techsupport@ecomcharge.com</authorEmail>
  <license>http://opensource.org/licenses/MIT</license>
	<version>2.0.3</version>
	<description>beGateway Payment Plugin</description>
	<files>
 		<filename plugin="begateway">begateway.php</filename>
    <folder>begateway-api-php</folder>
	</files>
	<languages folder="language">
		<language tag="ru-RU">ru-RU.plg_vmpayment_begateway.ini</language>
		<language tag="en-GB">en-GB.plg_vmpayment_begateway.ini</language>
	</languages>
  <params addpath="/administrator/components/com_virtuemart/elements">
      <param type="vmjpluginwarning"/>
      <param name="GatewayUrl" type="text" label="PLG_BEGATEWAY_VM3_GATEWAYURL" default="" size="100"/>
      <param name="PageUrl" type="text" label="PLG_BEGATEWAY_VM3_PAGEURL" default="" size="100"/>
      <param name="TransactionType" type="list" default="0" label="PLG_BEGATEWAY_VM3_TRANSACTIONTYPE">
          <option value="payment">PLG_BEGATEWAY_VM3_TRX_TYPE_PAYMENT</option>
          <option value="authorization">PLG_BEGATEWAY_VM3_TRX_TYPE_AUTH</option>
      </param>
      <param name="ShopId" type="text" label="PLG_BEGATEWAY_VM3_SHOPID" />
      <param name="ShopKey" type="text" label="PLG_BEGATEWAY_VM3_SHOPKEY" size="100"/>
      <param name="payment_logos" scope="com_virtuemart" type="vmfiles" label="PLG_BEGATEWAY_VM3_LOGO"
                      directory="/images/stories/virtuemart/payment"
                      default="default" hide_default="1" hide_none="1" stripext="0" exclude="^_"/>
  </params>
</extension>
