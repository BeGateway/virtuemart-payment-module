<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.0" type="plugin" group="vmpayment" method="upgrade">
	<name>beGateway</name>
 	<author>eComCharge</author>
  <creationDate>Dec 18 2016</creationDate>
	<authorEmail>techsupport@ecomcharge.com</authorEmail>
  <license>http://opensource.org/licenses/MIT</license>
	<version>2.3.1</version>
	<description>beGateway Payment Plugin</description>
	<files>
 		<filename plugin="begateway">begateway.php</filename>
    <folder>begateway-api-php</folder>
	</files>
	<languages folder="language">
		<language tag="ru-RU">ru-RU.plg_vmpayment_begateway.ini</language>
		<language tag="en-GB">en-GB.plg_vmpayment_begateway.ini</language>
	</languages>
  <vmconfig>
    <fields name="params">
      <fieldset name="basic">
        <field name="ShopId" type="text" label="PLG_BEGATEWAY_VM3_SHOPID" />
        <field name="ShopKey" type="text" label="PLG_BEGATEWAY_VM3_SHOPKEY" size="100"/>
        <field name="GatewayUrl" type="text" label="PLG_BEGATEWAY_VM3_GATEWAYURL" size="100" />
        <field name="PageUrl" type="text" label="PLG_BEGATEWAY_VM3_PAGEURL" size="100"/>
        <field name="TransactionType" type="list" default="0" label="PLG_BEGATEWAY_VM3_TRANSACTIONTYPE">
          <option value="payment">PLG_BEGATEWAY_VM3_TRX_TYPE_PAYMENT</option>
          <option value="authorization">PLG_BEGATEWAY_VM3_TRX_TYPE_AUTH</option>
        </field>
        <field name="payment_currency" type="vmacceptedcurrency" default="" label="PLG_BEGATEWAY_CURRENCY" description="PLG_BEGATEWAY_CURRENCY_DESC" />
        <field name="countries" type="vmcountries"  scope="com_virtuemart" default="" label="PLG_BEGATEWAY_COUNTRIES" description="PLG_BEGATEWAY_COUNTRIES_DESC"/>
        <field name="min_amount" type="text"  label="PLG_BEGATEWAY_MIN_AMOUNT" description="PLG_BEGATEWAY_MIN_AMOUNT_EXPLAIN" />
        <field name="max_amount" type="text"  label="PLG_BEGATEWAY_MAX_AMOUNT" description="PLG_BEGATEWAY_MAX_AMOUNT_EXPLAIN" />
        <field name="TestMode" type="list" default="0" label="PLG_BEGATEWAY_VM3_TEST_MODE">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="EnableCards" type="list" default="1" label="PLG_BEGATEWAY_VM3_ENABLE_CARD">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="EnableHalva" type="list" default="0" label="PLG_BEGATEWAY_VM3_ENABLE_HALVA">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="EnableErip" type="list" default="0" label="PLG_BEGATEWAY_VM3_ENABLE_ERIP">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="status_pending" type="vmorderstate" scope="com_virtuemart" default="P" label="PLG_BEGATEWAY_STATUS_PENDING" description="PLG_BEGATEWAY_STATUS_PENDING_EXPLAIN" />
        <field name="status_success" type="vmorderstate" scope="com_virtuemart" default="C" label="PLG_BEGATEWAY_STATUS_SUCCESS" description="PLG_BEGATEWAY_STATUS_SUCCESS_EXPLAIN" />
        <field name="status_canceled" type="vmorderstate" scope="com_virtuemart" default="X" label="PLG_BEGATEWAY_STATUS_FAILED" description="PLG_BEGATEWAY_STATUS_FAILED_EXPLAIN" />
        <field name="payment_logos" scope="com_virtuemart" multiple="true" type="vmfiles" label="PLG_BEGATEWAY_VM3_LOGO"
                      directory="/images/virtuemart/payment"
                      default="default" hide_default="1" hide_none="1" stripext="0" exclude="^_"/>
      </fieldset>
    </fields>
  </vmconfig>
</extension>
